syntax on
filetype indent plugin on
set modeline
setlocal tabstop=8
setlocal softtabstop=8
setlocal shiftwidth=8
setlocal textwidth=80
setlocal colorcolumn=80
" setlocal smarttab
" setlocal expandtab
setlocal autoindent
setlocal cindent
setlocal cinoptions=:0,l1,t0,g0,(0
setlocal fileformat=unix

set encoding=utf-8

map <leader>o  <C-o>
map <leader>t  <C-t>
map <leader>i  <C-i>
